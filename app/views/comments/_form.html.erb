<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
  <% if user_signed_in? %>
    <%= f.label current_user.username %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :author, value: current_user.username %>
  <% end %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit class: 'btn btn-primary' %>
  </p>
<% end %>