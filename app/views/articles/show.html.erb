<div class="container">

      <div class="blog-header">
        <h1 class="blog-title"><%= t('articles.article_details') %></h1>
        <p class="lead blog-description">The official example template of creating a blog with Bootstrap.</p>
      </div>

    <div class="row">

	    <div class="col-sm-8 blog-main">
	    	<div class="blog-post">
				<h2 class="blog-post-title"><%= @article.title %></h2>
				<p class="blog-post-meta">Created by <%= @article.author %></p>
				<blockquote><%= @article.text %></blockquote>
				<% if can? :manage, @article %>
					<%= link_to 'Редактировать', edit_article_path(@article) %> |
					<%= link_to 'Удалить', article_path(@article), method: :delete, data: { confirm: 'Вы уверены?' } %>
				<% end %>
			</div>



<h2>Comments:</h2>
<%= render @article.comments %>

		</div>
		<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
			<h2>Add a comment:</h2>
			<%= render 'comments/form' %>
		</div>
	</div>
</div>

